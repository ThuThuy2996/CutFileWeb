@using CutFileWeb.ViewModels
@model ProductViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.ProductName" class="control-label"></label>
                <input asp-for="@Model.ProductName" class="form-control" />
                <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CategoryId">Category</label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    <option selected="selected" value="0">--Select--</option>
                    @if (Model.categories != null)
                    {
                        @foreach (var parent in Model.categories)
                        {
                            <option value="@parent.CategoryId">@parent.CategoryName</option>
                        }
                    }

                </select>
                <span asp-validation-for="@Model.BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BrandId">Brand</label>
                <select asp-for="@Model.BrandId" class="form-control">
                    <option selected="selected" value="0">--Select--</option>
                    @if (Model.brands != null)
                    {
                        @foreach (var parent in Model.brands)
                        {
                            <option value="@parent.BrandId">@parent.BrandName</option>
                        }
                    }

                </select>
                <span asp-validation-for="@Model.BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ProductPrice" class="control-label"></label>
                <input asp-for="@Model.ProductPrice" class="form-control" />
                <span asp-validation-for="@Model.ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ProductDescription" class="control-label"></label>
                <input asp-for="@Model.ProductDescription" class="form-control" />
                <span asp-validation-for="@Model.ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ProductContentDetail" class="control-label"></label>
                <textarea asp-for="@Model.ProductContentDetail" class="form-control" ></textarea>
                <span asp-validation-for="@Model.ProductContentDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input type ="file"  accept="image/png, image/gif, image/jpeg" asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductFile" class="control-label"></label>
                <input type="file" asp-for="ProductFile" class="form-control" />
                <span asp-validation-for="ProductFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script>
    CKEDITOR.replace("ProductContentDetail");
</script>
